{
  "version": 2,
  "builds": [
    {
      "src": "mySite/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "theme/staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "theme/static/(.*)",
      "dest": "theme/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "mySite/wsgi.py"
    }
  ]
}